<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="hexagonit.virtualgallery"
      tal:omit-tag="">
<head>
    <metal:block metal:fill-slot="head_slot">
    	<script src="swfobject.js" type="text/javascript"
            tal:attributes="src string:${view/portal_url}/++resource++hexagonit.virtualgallery/swfobject.js"></script>
        <script type="text/javascript" charset="utf-8"
                tal:content='string: 
                    jQuery(function () { 
                    var flashvars = {
                        dataURL:"${view/context_url}/@@virtualgallery.json"
                    };
                    var params = {
                        menu: "false",
                        scale: "noScale",
                        allowFullscreen: "true",
                        allowScriptAccess: "always",
                        bgcolor: "#FFFFFF"
                    };
                    var attributes = {
                        id:"Virtual3DGallery"
                    };
                    function callbackFn(e) {
                        $("#virtualgallery-wrapper").height($("#virtualgallery-wrapper").width() / 2.5);
                    }
                    swfobject.embedSWF(
                    "${view/portal_url}/++resource++hexagonit.virtualgallery/Virtual3DGallery.swf",
                    "altContent", "100%%", "100%%", "10.0.0",
                    "${view/portal_url}/++resource++hexagonit.virtualgallery/expressInstall.swf",
                    flashvars, params, attributes, callbackFn);
                    });'></script>
    </metal:block>
</head>

<body>
    <metal:content-core fill-slot="content-core">
        <metal:content-core define-macro="content-core">
            <div id="virtualgallery-wrapper">
                <div id="altContent">
                    <p><a href="http://www.adobe.com/go/getflashplayer"><img
                           src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif"
                           alt="Get Adobe Flash player" /></a>
                    </p>
                </div>
            </div>
        </metal:content-core>
    </metal:content-core>
</body>
</html>
