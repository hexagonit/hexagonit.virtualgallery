<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <action-provider name="portal_actions">
        <object name="virtualgallery_settings" meta_type="CMF Action"
           i18n:domain="hexagonit.virtualgallery">
        <property name="title"
           i18n:translate="">Virtual gallery settings</property>
        <property name="description" i18n:translate=""></property>
        <property
            name="url_expr">string:${object_url}/@@virtualgallery-settings</property>
        <property name="link_target"></property>
        <property name="icon_expr"></property>
        <property name="available_expr">object/@@virtualgallery-enabled</property>
        <property name="permissions"/>
        <property name="visible">True</property>
        </object>

    </action-provider>
</object>
